<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.planeat">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_planeat_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_planeat_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Planeat"
        tools:targetApi="31">

        <!-- MainActivity -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="true" />

        <!-- LoginActivity -->
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- SignupActivity -->
        <activity
            android:name=".ui.signup.SignupActivity"
            android:exported="true" />

        <!-- MyPageActivity -->
        <activity
            android:name=".ui.MyPageActivity"
            android:exported="true"/>

        <!-- MealActivity -->
        <activity
            android:name=".ui.MealActivity"
            android:exported="true"/>

        <!-- MealDetailActivity -->
        <activity
            android:name=".ui.MealDetailActivity"
            android:exported="true"/>

        <!-- ChatActivity -->
        <activity
            android:name=".ui.ChatActivity"
            android:exported="true"/>

    </application>

</manifest>